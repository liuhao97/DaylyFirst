<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?attr/zzItemBackground"
    app:backgroundAttr="zzItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_three_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/zztextColor"
            app:textColorAttr="zztextColor"

            tools:text="这才叫婚纱，你那只能叫合影，北京27°罗马婚纱照"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/item_three_pic_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                tools:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/item_three_pic_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                tools:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/item_three_pic_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                tools:src="@mipmap/ic_launcher"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_three_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:textColor="?attr/zztextColor"
                app:textColorAttr="zztextColor"

                tools:text="北京罗马风情婚纱"/>

            <TextView
                android:id="@+id/item_three_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/item_three_source"
                android:textColor="?attr/zztextColor"
                app:textColorAttr="zztextColor"

                tools:text="0评论"/>

            <ImageView
                android:id="@+id/item_three_dislike"
                android:layout_width="28dp"
                android:layout_height="12dp"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/dislikeicon_textpage"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>